<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_header"
    android:layout_width="fill_parent"
    android:layout_height="500dp"
    tools:context="com.yapp.lazitripper.views.MyProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:text="섭지코지"
                android:textColor="#fffedf6b"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/country_image"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/korea" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_addr"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="41dp"
                android:layout_marginLeft="16dp"
                android:text="TEL"
                android:textColor="#fffedf6b"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="41dp"
                android:layout_marginLeft="16dp"
                android:text="1544-9506"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rating_avg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="ADD"
                android:textColor="#fffedf6b"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Jeju Island"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/rating_avg"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title"
            android:layout_marginStart="16dp"
            android:isIndicator="true"
            android:numStars="5" />
    </RelativeLayout>
</LinearLayout>