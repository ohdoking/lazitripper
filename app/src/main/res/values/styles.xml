<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="TagGroup.Beauty_Gray" parent="TagGroup">
        <item name="atg_borderColor">#cbcbcb</item>
        <item name="atg_textColor">#666666</item>
        <item name="atg_checkedBorderColor">#cbcbcb</item>
        <item name="atg_checkedBackgroundColor">#fafafa</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/calendar_text_small</item>
        <item name="android:background">@drawable/facebook_btn</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
